<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
    integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">

{{#if users}}
{{>nav_dos}}
{{else}}
{{>nav_uno}}    
{{/if}}

<br>
<div class="container-fluid">
    <div class="row">
        <div class="col-8">
            <hr>
            {{#each Articulos}}
                <div class="col-4">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{title}}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{hora}}</h6>
                        <p class="card-text">{{ descript}}</p>
                        <hr>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-12">
                <br>
                <center>
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">sin articulos </h5>
                            <p class="card-text">
                                Aun no se tiene articulos creados para mostrar
                            </p>
                            <hr>
                        </div>
                    </div>
                </center>
            </div>
            {{/each}}
        </div>
        <div class="col-4">
            <div class="modal-body">
                <form action="/addMensaje" method="POST">
                    <div class="form-group">
                        <input type="text" name="nombre" class="form-control" placeholder="Nombre de usuario">
                    </div>
                    <div class="form-group">
                        <input type="email" name="correo" class="form-control" placeholder="Correo electronico">
                    </div>
                    <div class="form-group">
                        <textarea name="description" rows="4" class="form-control" placeholder="Description"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-block">
                            Enviar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>