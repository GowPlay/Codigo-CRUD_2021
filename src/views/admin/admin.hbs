<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.css">
<link rel="stylesheet" type="text/css" href="/css/Admin/all.min.css">

<link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">

<link rel="stylesheet" type="text/css" href="/css/style.css">

<body class="overlay-scrollbar">
	<!-- navbar -->
	<div class="navbar">
		<!-- nav left -->
		<ul class="navbar-nav">
			<li class="nav-item">
				<a class="nav-link">
					<i class="fas fa-bars" onclick="collapseSidebar()"></i>
				</a>
			</li>

		</ul>
		<!-- end nav left -->
		<!-- form -->

		<!-- end form -->
		<!-- nav right -->
		<ul class="navbar-nav  ">

			<div class="col-4 nav-item">
				<a href="/req/logout">
					<div>
						<center>
							<i class="fas fa-sign-out-alt"></i>
						</center>
					</div>
					<span>Logout</span>
				</a>
			</div>



		</ul>
		<!-- end nav right -->
	</div>
	<!-- end navbar -->
	<!-- sidebar -->
	<div class="sidebar">
		<ul class="sidebar-nav">
			<li class="sidebar-nav-item">
				<a href="#" class="sidebar-nav-link">
					<div>
						<i class="fas fa-tachometer-alt"></i>
					</div>
					<span>
						Dashboard
					</span>
				</a>
			</li>
			<li class="sidebar-nav-item">
				<a data-toggle="modal" data-target="#AddArticuloModal" class="sidebar-nav-link active">
					<div>
						<i class="fab fa-accusoft"></i>
					</div>
					<span>Add Articulo</span>
				</a>
			</li>
			<li class="sidebar-nav-item">
				<a data-toggle="modal" data-target="#ListArticuloModal" class="sidebar-nav-link">
					<div>
						<i class="fas fa-tasks"></i>
					</div>
					<span>List Articulos</span>
				</a>
			</li>
			<li class="sidebar-nav-item">
				<a data-toggle="modal" data-target="#ArticulosModal" class="sidebar-nav-link">
					<div>
						<i class="fas fa-spinner"></i>
					</div>
					<span>Ultimos Articulos</span>
				</a>
			</li>
			<li class="sidebar-nav-item">
				<a data-toggle="modal" data-target="#MensageModal" class="sidebar-nav-link">
					<div>
						<i class="fas fa-check-circle"></i>
					</div>
					<span>Mensajes</span>
				</a>
			</li>
			<li class="sidebar-nav-item">
				<center>
					<a class="nav-item" href="#" onclick="switchTheme()">
						<i class="fas fa-moon dark-icon"></i>
						<i class="fas fa-sun light-icon"></i>
					</a>
				</center>
			</li>
		</ul>
	</div>
	<!-- end sidebar -->
	<!-- main content -->
	<div class="wrapper">
		<div class="row">
			<div class="col-3 col-m-6 col-sm-6">
				<div class="counter bg-primary">
					<p>
						<i class="fas fa-tasks"></i>
					</p>
					{{#each NumArticulos}}
						<h3>{{total}}</h3>
					{{/each}}
					<p>Articulos publicados</p>
				</div>
			</div>
			<div class="col-3 col-m-6 col-sm-6">
				<div class="counter bg-success">
					<p>
						<i class="fas fa-check-circle"></i>
					</p>
					{{#each NumMensajes}}
						<h3>{{total}}</h3>
					{{/each}}
					<p>Total mensajes</p>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-12 col-m-12 col-sm-12">
				<div class="card">
					<div class="card-header">
						<h3>
							List Articulos
						</h3>
						<i class="fas fa-ellipsis-h"></i>
					</div>
					<div class="card-content">
						<table>
							<thead>
								<tr>
									<th>#</th>
									<th>titulo</th>
									<th>descripcion</th>
									<th>user</th>
									<th>Fecha </th>
								</tr>
							</thead>Articulos
							<tbody>
								{{#each Articulos}}
									<tr>
										<td>{{id}}</td>
										<td>{{title}}</td>
										<td>{{descript}}</td>
										<td>
											<samp class="dot">
												<i class="bg-success"></i>
												{{ users_id}}
											</samp>
										</td>
										<td>{{hora}}</td>
									</tr>
								{{/each}}
							</tbody>
						</table>
					</div>
				</div>
			</div>

		</div>
		

		<br><br><br><br><br><br><br><br><br><br>
		<div class="row">
			<div class="col-12">
				<samp>Crud - node + MySQL</samp>
			</div>
		</div>
	</div>
	{{>modals}}
	<!-- end main content -->
	<!-- import script -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
	<script src="/js/index.js"></script>
	<!-- end import script -->
</body>